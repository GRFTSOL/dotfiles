; == top-center ===============================================================
; weather time date {{{

(defwidget top-center []
  (box :class "top-center-box" :spacing 0
    (weather) (time) (weekday)
  )
)

(defpoll wttr_emoji :interval "10m" "curl wttr.in/Portland?format=%c")
(defpoll wttr_condition :interval "10m" "curl wttr.in/Portland?format=%C")
(defwidget weather []
  (box :class "weather-box" :halign "end"
    ; wttr_emoji
    wttr_condition
  )
)

(defpoll hour :interval "1s" "date '+%H'")
(defpoll minute :interval "1s" "date '+%M'")
(defwidget time []
  (box :class "time-box" :spacing 0 :halign "center" :space-evenly false
    (eventbox :class "time-hour" hour)
    ":"
    (eventbox :class "time-minute" minute)
  )
)

(deflisten week :inital 'tail /tmp/.week' 'tail -F /tmp/.week')
(deflisten day :inital 'tail /tmp/.day' 'tail -F /tmp/.day')
(defwidget weekday []
  (mybox :box-class "weekday"
    (eventbox :class "weekday-day" day)
    (eventbox :class "weekday-week" week)
  )
)

; }}}
