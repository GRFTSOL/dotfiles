#!/usr/bin/env bash

day () {
    while true; do
        date '+%A, %B %d' > "/tmp/eww/day"
        until_tomorrow=$(( $(date +%s -d "tomorrow 00:00") - $( date +%s ) ))
        sleep "$until_tomorrow"
    done
}

week () {
    while true; do
        echo $(( ($(date -d "1996-02-26 PST" +%s) - $(date +%s))/(60*60*24)/-7 \
        )) > "/tmp/eww/week"
        until_monday=$(( $(date +%s -d "next monday 00:00") - $( date +%s ) ))
        sleep "$until_monday"
    done
}

clockface-hour () {
    hour=$(date "+%I")

    case "$hour" in
        01) echo "";;
        02) echo "";;
        03) echo "";;
        04) echo "";;
        05) echo "";;
        06) echo "";;
        07) echo "";;
        08) echo "";;
        09) echo "";;
        10) echo "";;
        11) echo "";;
        12) echo "";;
         *) echo "";;
    esac
}

clockface-minute () {
    minute=$(date "+%M / 5" | bc)
    minute=${minute%.*}

    case "$minute" in
         1) echo "";;
         2) echo "";;
         3) echo "";;
         4) echo "";;
         5) echo "";;
         6) echo "";;
         7) echo "";;
         8) echo "";;
         9) echo "";;
        10) echo "";;
        11) echo "";;
        12) echo "";;
         *) echo "";;
    esac
}

continuous () {
    day & week
}

"$@"
