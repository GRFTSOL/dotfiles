#!/usr/bin/env bash

###############################################################################
# Author: cullyn
# Date Created: 2022 August 3

# Description:
# open a temp floating terminal at preferred eye level
###############################################################################

if [[ -z "$1" ]]; then
    alacritty & sleep 0.5
    hyprctl dispatch togglefloating x;
    hyprctl dispatch resizeactive "exact 1600 1900";
    hyprctl dispatch moveactive "exact 1120 186";
elif [ "$*" = "tt" ]; then
    echo "working"
else
    alacritty -e "$@" & sleep 0.5
    hyprctl dispatch togglefloating x;
    hyprctl dispatch resizeactive "exact 900 682";
    hyprctl dispatch moveactive "exact 70 1452";
fi
