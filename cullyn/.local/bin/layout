#!/usr/bin/env bash

###############################################################################
# Author: cullyn | https://github.com/nosvagor/dotfiles

# Description:
# various hard coded layouts that can be called in other scripts

# Usage:

###############################################################################

# layouts
# options=$(echo "rust ts notse dotfiles" | tr ' ' '\n')

chosen="$1"
workspace="$2"

default () {
    hyprctl dispatch workspace "$1"
    alacritty </dev/null &>/dev/null & sleep 0.25
    firefox-developer-edition --new-window </dev/null &>/dev/null & sleep 0.25
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1023 1811'
    hyprctl dispatch movefocus r
    firefox-developer-edition --new-window </dev/null &>/dev/null & sleep 0.25
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1659 1552'
    hyprctl dispatch movefocus l & sleep 0.5
}

# chosen="$(echo -e "$options" | rofi -theme ~/.config/rofi/layouts.rasi -p "ï±–" -dmenu)"

"$chosen" "$workspace"
