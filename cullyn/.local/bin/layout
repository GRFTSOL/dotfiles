#!/usr/bin/env bash

discord () {
    hyprctl dispatch workspace 1
    tmux select-window -t :1
    tmux select-window -t :1
    alacritty --hold --working-directory=notes -e tmux attach -t  & sleep 0.5
    exec discord & sleep 6
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1023 1811'
    hyprctl dispatch movefocus r
    firefox-developer-edition --new-window https://www.twitch.tv/directory/following & sleep 1
    alacritty --hold -e tmux attach -t  & sleep 0.5
    hyprctl dispatch movefocus u
    hyprctl dispatch resizeactive 'exact 1355 1058'
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1641 1863'
    hyprctl dispatch movefocus l
}

zoom () {
    hyprctl dispatch workspace 2
    tmux select-window -t :1
    tmux select-window -t :1
    alacritty --hold --working-directory=notes -e tmux attach -t  & sleep 0.5
    firefox-developer-edition --new-window https://www.youtube.com/feed/subscriptions & sleep 1
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1023 1811'
    hyprctl dispatch movefocus r
    exec zoom & sleep 6
    alacritty --hold -e tmux attach -t  & sleep 0.5
    hyprctl dispatch movefocus u
    hyprctl dispatch resizeactive 'exact 1355 1058'
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1641 1496'
    hyprctl dispatch movefocus l
}

code () {
    hyprctl dispatch workspace 3
    tmux select-window -t ﮂ:1
    alacritty --hold --working-directory=notes -e tmux attach -t ﮂ & sleep 0.5
    firefox-developer-edition --new-window https://calendar.google.com/calendar/u/0/r & sleep 1.5
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1023 1811'
    hyprctl dispatch movefocus r
    alacritty --hold -e tmux attach -t ﳣ & sleep 0.5
    hyprctl dispatch movefocus r
    hyprctl dispatch movefocus l
    hyprctl dispatch movefocus r
    alacritty --hold -e cava & sleep 0.5
    hyprctl dispatch movefocus u
    hyprctl dispatch resizeactive 'exact 1631 1863'
    hyprctl dispatch movefocus l
    hyprctl dispatch movefocus l
}

dotfiles () {
    hyprctl dispatch workspace 4
    tmux select-window -t :1
    alacritty --hold --working-directory=dotfiles -e tmux attach -t  & sleep 0.5
    firefox-developer-edition --new-window https://github.com/nosvagor & sleep 1.5
    hyprctl dispatch movefocus l
    hyprctl dispatch resizeactive 'exact 1023 1811'
    hyprctl dispatch movefocus r
    firefox-developer-edition --new-window https://github.com/nosvagor/dotfiles & sleep 1
    hyprctl dispatch movefocus r
    hyprctl dispatch movefocus l
    hyprctl dispatch movefocus r
    alacritty --hold -e cava & sleep 0.5
    hyprctl dispatch movefocus u
    hyprctl dispatch resizeactive 'exact 1631 1863'
    hyprctl dispatch movefocus l
    hyprctl dispatch movefocus l
}

# internet randomly goes out for a few seconds and fucks up opening windows
go=false
conneciton () {
    if wget -q --spider http://google.com; then
        go=true
    else
        go=false
    fi

}

hyprctl keyword input:follow_mouse 0
while [ "$go" = false ]; do
    conneciton
    sleep 1
done
"$1"
hyprctl keyword input:follow_mouse 1

exit 0
