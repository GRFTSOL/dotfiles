#!/usr/bin/env bash

alacritty -e ~/.local/bin/tmux-session restore
~/.config/eww/scripts/pulse_info set_volume

hyprctl keyword input:follow_mouse 0
# ~/.local/bin/layout code
# ~/.local/bin/layout zoom
~/.local/bin/layout dotfiles
# ~/.local/bin/layout discord
hyprctl keyword input:follow_mouse 1

ytmdesktop & sleep 1
notify-send -t 5000 "$USER@$HOSTNAME" "こんにちは" --icon="$HOME/dotfiles/resources/share/nosvagor.png"
hyprctl dispatch focuswindow youtube-music-desktop-app

exit 0
