#!/usr/bin/env bash

#!/bin/bash

go=false

conneciton () {
    if wget -q --spider http://google.com; then
        go=true
    else
        go=false
    fi
}

while [ "$go" = false ]; do
    conneciton
    notify-send "connection not found... retrying in 5 seconds"
    sleep 5
done

~/.local/bin/layout discord
~/.local/bin/layout zoom
~/.local/bin/layout code
~/.local/bin/layout dotfiles

ytmdesktop & disown

notify-send -t 6000 "$USER@$HOSTNAME" "こんにちは" --icon="$HOME/dotfiles/resources/share/nosvagor.png"

exit 0
