#!/usr/bin/env bash

notify-send -t 5000 "$USER@$HOSTNAME" "こんにちは" --icon="$HOME/dotfiles/resources/share/nosvagor.png"
~/.local/bin/tmux-session restore

go=false
conneciton () {
    if wget -q --spider http://google.com; then
        go=true
    else
        go=false
    fi
}

while [ "$go" = false ]; do
    conneciton
    sleep 1
done

~/.local/bin/layout discord
~/.local/bin/layout zoom
~/.local/bin/layout code
~/.local/bin/layout dotfiles
exec ytmdesktop
