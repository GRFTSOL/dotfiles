#!/usr/bin/env bash

###############################################################################
# Author: cullyn | https://github.com/nosvagor/dotfiles

# Description:
# simple set of commands to run upon hyprland startup

# Usage:
# place "exec-once=~/path/to/script" in hyprland.conf
###############################################################################

#set wallpaper
hyprpaper & disown

# start status bar
waybar & disown

# start notifications
dunst & disown

# start music player
ytmdesktop & disown

notify-send -t 6000 "$USER@$HOSTNAME" "こんにちは" --icon="$HOME/dotfiles/resources/share/nosvagor.png"

# enough time to select a song
sleep 10

# open default layout
layout default 3


exit 0
