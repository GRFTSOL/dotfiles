#!/usr/bin/env bash

###############################################################################
# Author: cullyn | https://github.com/nosvagor/dotfiles
# Date Created: 2022 August 3

# Description:
# simple set of commands to run upon hyprland startup

# Usage:
# place "exec-once=~/path/to/script" in hyprland.conf
###############################################################################

# set wallpaper
hyprpaper </dev/null &>/dev/null & disown
#
# # start status bar
exec waybar </dev/null &>/dev/null & disown

# # start notifications
exec dunst </dev/null &>/dev/null & disown

# start music player
ytmdesktop </dev/null &>/dev/null & disown

# end with switching to main workspace
hyprctl dispatch workspace 2 && sleep 1
notify-send "swap to 2"

alacritty </dev/null &>/dev/null & sleep 0.5
firefox-developer-edition --new-window  </dev/null &>/dev/null & sleep 0.5
hyprctl dispatch resizeactive,exact 1659 1552
notify-send "working"
firefox-developer-edition --new-window </dev/null &>/dev/null & sleep 0.5
notify-send "end"

exit 0
