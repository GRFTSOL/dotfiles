#!/usr/bin/env bash

###############################################################################
# Author: cullyn
# Date Created: 2022, July 15

# Description:
# Simply makes default directory structure starting from $HOME
###############################################################################

mkdir -v "$HOME/downloads"

mkdir -v "$HOME/documents"
mkdir -v "$HOME/documents/manuals"
mkdir -v "$HOME/documents/papers"
mkdir -v "$HOME/documents/share"
mkdir -v "$HOME/documents/templates"
mkdir -v "$HOME/documents/textbooks"

mkdir -v "$HOME/media"
mkdir -v "$HOME/media/images"
mkdir -v "$HOME/media/music"
mkdir -v "$HOME/media/videos"
mkdir -v "$HOME/media/recordings"
mkdir -v "$HOME/media/gifs"
