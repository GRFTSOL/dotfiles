#!/usr/bin/env bash

cd ~ || exit
caddy file-server --listen :42069 --browse & disown
sleep 1

change-bg "code"

layout -n 1
# layout -n 2
layout -n 3
layout -n 4

hyprctl dispatch workspace 5
glava -e "bars_rc.glsl" & disown
glava -e "radial_rc.glsl" & disown
spotify & disown
sleep 2

lock

exit 0
