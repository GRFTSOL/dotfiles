#!/usr/bin/env bash

kill_background () {
    ps -ef | rg "$1" | rg -v rg | awk '{print $2}' | xargs kill
}


main () {
    hyprctl keyword input:follow_mouse 0
    # ~/.local/bin/layout -n 1 -a discord -w https://twitch.tv/following
    # sleep 3
    # ~/.local/bin/layout -n 2 -a inkscape
    # sleep 3
    # ~/.local/bin/layout -n 3 -s vagari.nvim -w https://github.com/nosvagor/vagari.nvim
    # sleep 3
    # ~/.local/bin/layout -n 4 -s nvim -w https://github.com/nosvagor/dotfiles
    hyprctl keyword input:follow_mouse 1


    hyprctl dispatch workspace 5
    spotify & disown
    mpvpaper -o "--loop --brightness=6 --contrast=9 --saturation=-16 --hue=-24" "HDMI-A-1" ~/dotfiles/videos/dna.mp4 &>/dev/null & disown
    notify-send "$USER@$HOSTNAME" "こんにちは"

    # mpvpaper -o "--loop --brightness=3  --contrast=6  --saturation=-50  --hue=-8 --gamma=-20" "HDMI-A-1" ~/dotfiles/resources/videos/blackhole.webm & disown
    # sleep 0.5
    # kill_background "dna"
    # swaylock -C "$HOME/.config/swaylock/config.conf"
    # sleep 0.5
    # kill_background "blackhole"
    # eval "$HOME/.local/bin/eww-open"
    # hyprctl dispatch workspace 5
}

main

exit 0
