#!/usr/bin/env bash

SOUND_PATH="$HOME/dotfiles/share/sounds"
# dunsitfy arguments топ
# app="$1"
# summary="$2"
# body="$3"
# icon_path="$4"
# urgency="$5"

if [[ "$1" == "timer" ]]; then
   sound="jackpot"
fi

case "$1" in
    timer) sound="jackpot" ;;
    attention) sound="discovery" ;;
    chat) sound="reward" ;;
    work) sound="fruit" ;;
    *) sound="moondrop" ;;
esac

if [[ "$1" != "youtube-music-desktop-app" ]]; then
    paplay "$SOUND_PATH/$sound.ogg" & disown
fi

exit 0
