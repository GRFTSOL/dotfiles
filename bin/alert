#!/usr/bin/env bash

SOUND_PATH="$HOME/dotfiles/share/sounds"
# dunsitfy arguments топ
app="$1"
# summary="$2"
# body="$3"
# icon_path="$4"
urgency="$5"

case "$app" in
    timer) sound="jackpot" ;;
    attention) sound="discovery" ;;
    chat) sound="reward" ;;
    work) sound="fruit" ;;
    *) sound="moondrop" ;;
esac

# dusnt urgency check
if [[ "$urgency" == "CRITICAL" ]]; then
    sound="gems"
fi


if [[ "$app" != "Spotify" && "$app" != "discord" ]]; then
    paplay "$SOUND_PATH/$sound.ogg" & disown
fi

exit 0
