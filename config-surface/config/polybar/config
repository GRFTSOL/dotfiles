[module/dunst]
type = custom/ipc
initial = 1
format-foreground = ${colors.sub}
format-margin = 1
format-font = 5
hook-0 = echo "%{A1:polybar-msg hook dunst 2 && killall -SIGUSR1 dunst:}%{O-2}  %{A}" &
hook-1 = echo "%{A1:killall -SIGUSR2 dunst && notify-send -t 3000 Resumed Dunst &&  polybar-msg hook dunst 1:}%{F#7b839e}%{O-2}  %{A}" &


