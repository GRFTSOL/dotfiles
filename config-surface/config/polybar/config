label-connected-foreground = ${colors.foreground}
label-disconnected = %{A1:bspc rule -a Alacritty -o state=floating rectangle=1462x690+637+324 && alacritty:}睊%{A}%{O10}
label-disconnected-foreground = ${colors.warn}
ramp-signal-0 =%{F#e36866}直%{F-}%{O9}
